{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "sourceMap": true,
    "lib": ["ES2022"],
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["src/server/**/*.ts", "src/types/**/*.ts"]
}
